<h2>Студенты</h2>

<form action="/methodist/students" method="POST" class="row g-3 mb-4">
  <div class="col-md-2">
    <input type="text" name="login" class="form-control" placeholder="Логин" required>
  </div>
  <div class="col-md-2">
    <input type="password" name="password" class="form-control" placeholder="Пароль" required>
  </div>
  <div class="col-md-3">
    <input type="text" name="full_name" class="form-control" placeholder="ФИО" required>
  </div>
  <div class="col-md-2">
    <input type="text" name="phone_number" class="form-control" placeholder="Телефон">
  </div>
  <div class="col-md-2">
    <select name="group_id" class="form-select" required>
      <option value="">Группа...</option>
      {{#each groups}}
        <option value="{{this.id}}">{{this.direction}} ({{this.course}} курс)</option>
      {{/each}}
    </select>
  </div>
  <div class="col-md-1 d-grid">
    <button class="btn btn-success">Добавить</button>
  </div>
</form>

<table class="table">
  <thead><tr><th>ID</th><th>Логин</th><th>ФИО</th><th>Телефон</th><th></th></tr></thead>
  <tbody>
    {{#each students}}
      <tr>
        <td>{{this.id}}</td>
        <td>{{this.login}}</td>
        <td>{{this.full_name}}</td>
        <td>{{this.phone_number}}</td>
        <td>
          <form action="/methodist/students/{{this.id}}?_method=DELETE" method="POST">
            <button class="btn btn-danger btn-sm">Удалить</button>
          </form>
        </td>
      </tr>
    {{/each}}
  </tbody>
</table>
